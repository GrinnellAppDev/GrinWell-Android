<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="95dip"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_sleep"
            android:src="@drawable/sleep"/>

        <ImageButton
            android:layout_width="95dip"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_eat"
            android:src="@drawable/silverware"/>


        <ImageButton
            android:layout_width="95dip"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_relax"
            android:src="@drawable/book" />

        <ImageButton
            android:layout_width="95dip"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_move"
            android:src="@drawable/run" />

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/grinwell_text"
        android:id="@+id/grinwell_textView"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="55dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold|"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rkay_stats_text"
        android:id="@+id/rayk_stats_textView"
        android:layout_below="@+id/grinwell_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/date_text_view"
        android:layout_below="@+id/rayk_stats_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="35dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Stats"
            android:id="@+id/textView19"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="27dp"
            android:textSize="35dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal|bold|"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Restore: Complete"
        android:id="@+id/textView15"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="40dp"
        android:background="#324"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sleep: 9hr/8hr"
        android:id="@+id/textView16"
        android:layout_above="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="40dp"
        android:background="#234"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Eat: 5/5"
        android:id="@+id/textView17"
        android:layout_above="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="40dp"
        android:background="#8767"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Move: 0/30"
        android:id="@+id/textView18"
        android:layout_above="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="40dp"
        android:background="#476"/>


</RelativeLayout>

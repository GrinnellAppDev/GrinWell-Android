<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:orientation="vertical">

    <edu.grinnellappdev.grinwell_android.CustomTextView
        android:id="@+id/about_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Developed by Grinnell Appdev, 2014\n@grinnellappdev.com"
        app:fontName="Roboto-LightItalic.ttf"
        android:textColor="#535353"/>


    <edu.grinnellappdev.grinwell_android.CustomTextView
        android:id="@+id/about_credit"
        android:layout_below="@id/about_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:text="* Samee Zahid (dev)\n* Lea Marolt Sonnenschein (design)\n* Christine Tran (design)"
        app:fontName="Roboto-Regular.ttf"
        android:textColor="#535353"/>

    <edu.grinnellappdev.grinwell_android.CustomTextView
        android:id="@+id/about_gnu"
        android:layout_below="@id/about_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:text="Released under the GNU General Public\nLicense\n\nThe source code:\n@github.com/grinnellappdev"
        app:fontName="Roboto-Bold.ttf"
        android:textColor="#535353"/>





</RelativeLayout>

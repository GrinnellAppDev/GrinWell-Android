<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.grinnellappdev.grinwell_android.NewEatActivity">


    <edu.grinnellappdev.grinwell_android.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0/5"
        android:padding="10dp"
        android:id="@+id/total_eaten"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:fontName="Roboto-Regular.ttf"
        android:gravity="center"
        android:textSize="45dp"
        android:background="#80B280"/>

    <edu.grinnellappdev.grinwell_android.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="total"
        app:fontName="Roboto-Bold.ttf"
        android:padding="10dp"
        android:id="@+id/textView2"
        android:layout_above="@+id/total_eaten"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="45sp"
        android:background="#006600"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/add_veg_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="25dp"
        android:background="@drawable/circle_dark"
        android:src="@drawable/carrot"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/add_fruit_button"
        android:layout_below="@+id/add_veg_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="25dp"
        android:background="@drawable/circle_light"
        android:src="@drawable/apple"/>
</RelativeLayout>
